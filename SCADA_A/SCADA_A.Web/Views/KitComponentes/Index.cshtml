@model IEnumerable<SCADA_A.Entidades.OnePieceFlow.KitComponentes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CUSTOMPN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TYPE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.POSITION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.COLOR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CUSTOMPN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TYPE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.POSITION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.COLOR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kit.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idKitComponentes">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idKitComponentes">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idKitComponentes">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
