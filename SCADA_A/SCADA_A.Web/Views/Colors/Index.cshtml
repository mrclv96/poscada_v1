@model IEnumerable<SCADA_A.Entidades.Colores.Color>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RGBHex)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RGBHex)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodigoColor">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodigoColor">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodigoColor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
